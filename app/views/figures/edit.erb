<h1>Edit Figure!</h1>

<form action="/figures/<%= @figure.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">

  <label>Name</label>
  <input type="text" name="figure[name]" value="<%= @figure.name %>">

  <br></br>

  <label>Titles</label>

  <br></br>

  <% Title.all.each do |title| %>
    <input type="checkbox"  name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>"><%= title.name %></input><br>
  <% end %>

  <br></br>
</form>
