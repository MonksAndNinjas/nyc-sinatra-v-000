<h1>Edit Figure!</h1>

<form action="/figures/<%= @figure.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">

  <label>Name</label>
  <input type="text" name="figure[name]" value="<%= @figure.name %>">

  <br></br>

  <label>Titles</label>

  <br></br>

  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>"><%= landmark.name %></input><br>
  <% end %>

  <br></br>
</form>
